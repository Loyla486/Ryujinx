<Application
    x:Class="Ryujinx.Ava.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sty="using:FluentAvalonia.Styling"
    xmlns:locale="clr-namespace:Ryujinx.Ava.Common.Locale">
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferSystemTheme="False" />
    </Application.Styles>
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem
                Click="About_OnClick"
                Header="{locale:Locale NativeMenuBarHelpAbout}" />
            <NativeMenuItem
                Command="{ReflectionBinding CheckForUpdates}"
                Header="{locale:Locale NativeMenuBarHelpCheckForUpdates}" />
        </NativeMenu>
    </NativeMenu.Menu>
</Application>